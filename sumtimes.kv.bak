#:kivy 1.7.1
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import Factory kivy.factory.Factory

<Screen>:
    canvas:
        Color:
            rgb: .2, .2, .2
        Rectangle:
            size: self.size

<Calculator>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Figures'
            font_size: '16sp'
            height: '48dp'
            padding: '5dp'

        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: 'AC'
                width: self.height
                on_release: app.reset()
            
            Button:
                text: 'HMsm'
                width: self.height
                on_release: app.change_format(self.text)
            
            Button:
                text:'HMs'
                width: self.height
                on_release: app.change_format(self.text)
            
            Button:
                text:'Ms'
                width: self.height
                on_release: app.change_format(self.text)
        
        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: '7'
                width: self.height
                on_release: app.figure(self.text)
            
            Button:
                text: '8'
                width: self.height
                on_release: app.figure(self.text)
            
            Button:
                text: '9'
                width: self.height
                on_release: app.figure(self.text)
            
            Button:
                text:'Msm'
                width: self.height
                on_release: app.change_format(self.text)
        
        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: '4'
                width: self.height
                on_release: app.figure(self.text)
            
            Button:
                text: '5'
                width: self.height
                on_release: app.figure(self.text)
            
            Button:
                text: '6'
                width: self.height
                on_release: app.figure(self.text)
            
            Button:
                text:'-'
                width: self.height
                on_release: app.minus()
        
        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: '1'
                width: self.height
                on_release: app.figure(self.text)
            
            Button:
                text: '2'
                width: self.height
                on_release: app.figure(self.text)
            
            Button:
                text: '3'
                width: self.height
                on_release: app.figure(self.text)
            
            Button:
                text:'+'
                width: self.height
                on_release: app.add()
        
        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: '0'
                width: self.height * 2
                on_release: app.figure(self.text)
            
            Button:
                text: '.:'
                width: self.height
                on_release: app.separator()
            
            Button:
                text:'='
                width: self.height
                on_release: app.equal()
            
        
        